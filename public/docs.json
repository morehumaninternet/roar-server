{
  "swagger": "2.0",
  "info": {
    "description": "Work In Progress Roar Server Server",
    "version": "0.0.1",
    "title": "Roar Server",
    "termsOfService": "http://swagger.io/terms/",
    "contact": {
      "email": "will@morehumaninternet.org"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "basePath": "/v1",
  "schemes": ["https", "http"],
  "paths": {
    "/website": {
      "get": {
        "tags": ["website"],
        "summary": "Returns the domain and twitter_handle for a given website",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "query",
            "name": "domain",
            "description": "the URL to look up",
            "example": "airbnb.com",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "schema": {
              "domain": {
                "type": "string",
                "required": true,
                "example": "airbnb.com"
              },
              "twitter_handle": {
                "type": "string",
                "required": true,
                "example": "@airbnb"
              }
            }
          }
        }
      }
    },
    "/login": {
      "get": {
        "tags": ["login"],
        "summary": "Login via Twitter",
        "produces": ["application/json"],
        "responses": {
          "200": {}
        }
      }
    }
  },
  "externalDocs": {
    "description": "Read more",
    "url": "https://github.com/morehumaninternet/roar-server"
  }
}
